---
layout: base.njk
bodyClass: theme-vscode
---
<section class="app-window window-vscode">
  <header class="window-bar">
    <div class="window-dots">
      <span class="dot dot-red"></span>
      <span class="dot dot-yellow"></span>
      <span class="dot dot-green"></span>
    </div>
    <div class="window-title">{{ title or "Dev" }}</div>
    <div class="window-meta">VS Code</div>
  </header>
  <div class="window-body">
    <div class="vscode-shell">
      <aside class="vscode-sidebar">
        <div class="sidebar-title">Explorer</div>
        <div class="folder-tree">
          {% if collections.devByTag %}
            {% for tagGroup in collections.devByTag %}
              <details class="folder">
                <summary class="folder-name">
                  <span class="folder-icon">üìÅ</span>
                  <span>{{ tagGroup.tag | capitalize }}</span>
                </summary>
                <ul class="file-list">
                  {% for post in tagGroup.posts %}
                    <li class="file-item">
                      <a href="{{ post.url | url }}">üìÑ {{ post.data.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              </details>
            {% endfor %}
          {% else %}
            <p style="color: var(--muted); font-size: 0.85rem;">No posts yet</p>
          {% endif %}
        </div>
      </aside>
      <div class="vscode-editor">
        {% if title and page.url != "/dev/" %}
        {# Individual post view - show metadata first #}
        <div class="post-header">
          <h1 class="post-title">{{ title }}</h1>
          {% if description %}
          <p class="post-description">{{ description }}</p>
          {% endif %}
          {% if backgroundImage %}
          <div class="post-image">
            <img src="{{ backgroundImage | url }}" alt="{{ title }}">
          </div>
          {% endif %}
        </div>
        {% endif %}
        <div class="post-content">
          {{ content | safe }}
        </div>
      </div>
    </div>
  </div>
</section>
